<% @page_title = "Show Ticket Detail" %>

  <% if @ticket.nil? %>
	  <% if !flash[:notice].blank? %>
	    <div class="notice">
	      <%= flash[:notice] %>
	    </div>
	  <% end %>
	<% else %>
		<div class="tickets show">
		  <h2>Show Ticket Detail</h2>

		  <table summary="Ticket detail view">
		    <tr>
		      <th>_id</th>
		      <td><%= @ticket.id %></td>
		    </tr>
		    <tr>
		      <th>url</th>
		      <td><%= @ticket.url %></td>
		    </tr>
		    <tr>
		      <th>external_id</th>
		      <td><%= @ticket.external_id %></td>
		    </tr>
		    <tr>
		      <th>created</th>
		      <td><%= @ticket.created_at %></td>
		    </tr>
		    <tr>
		      <th>type</th>
		      <td><%= @ticket.type %></td>
		    </tr>
		    <tr>
		      <th>subject</th>
		      <td><%= @ticket.subject %></td>
		    </tr>
		    <tr>
		      <th>description</th>
		      <td><%= @ticket.description %></td>
		    </tr>
		    <tr>
		      <th>priority</th>
		      <td><%= @ticket.priority %></td>
		    </tr>
		    <tr>
		      <th>status</th>
		      <td><%= @ticket.status %></td>
		    </tr>
		    <tr>
		      <th>submitter_id</th>
		      <td><%= @submitter.id %></td>
		    </tr>
		    <tr>
		      <th>assignee_id</th>
		      <td><%= @assignee.id %></td>
		    </tr>
		    <tr>
		      <th>organization_id</th>
		      <td><%= @organization.id %></td>
		    </tr>
		    <tr>
		      <th>tags</th>
		      <td><%= @ticket.tags %></td>
		    </tr>
		    <tr>
		      <th>has_incidents</th>
		      <td><%= @ticket.has_incidents ? 'true' : 'false' %></td>
		    </tr>
		    <tr>
		      <th>due_at</th>
		      <td><%= @ticket.due_at %></td>
		    </tr>        
		    <tr>
		      <th>via</th>
		      <td><%= @ticket.via %></td>
		    </tr>
		    <tr>
		      <th>organization_name</th>
		      <td><%= @organization.name %></td>
		    </tr>
		    <tr>
		      <th>submitter_name</th>
		      <td><%= @submitter.name %></td>
		    </tr>
		    <tr>
		      <th>assinee_name</th>
		      <td><%= @assignee.name %></td>
		    </tr>
		  </table>
		</div>
	<% end %>

